#include <stdio.h>

int main() {
    int n;

    printf("Enter an integer: ");
    scanf("%d", &n);

    printf("First three powers of %d:\n", n);
    printf("%d^1 = %d\n", n, n);        // n^1
    printf("%d^2 = %d\n", n, n * n);    // n^2
    printf("%d^3 = %d\n", n, n * n * n); // n^3

    return 0;
}
